.chatroom{ data: { controller: "chatroom" }, style: "background-image: url('#{ image_url('fondo_chatrooms_index.jpg') }');"}
  .chatroom__header
    .chatroom__name
      = @chatroom.name
    .chatroom__user-list
      - @chatroom.users.each_with_index do |user, index|
        - if index + 1 != @chatroom.users.length
          = "#{user.username}, "
        - else 
          = "#{user.username}."
  .chatroom__container{ id: "message-list", data: { "chatroom-target": 'container' } }
    = render partial: "message", collection: @chatroom.messages
  = form_for @message, url: chatroom_message_path(@chatroom), html: { class: 'chatroom__footer' } do |f|
    = f.text_area :body, class: 'chatroom__input', placeholder: "Escribe aqu√≠ tu mensaje", autofocus: true
    = f.submit 'Enviar', class: 'chatroom__button'
