= form_for @chatroom, html: { class: 'sidebar-chatroom-form' } do |f|
  .sidebar-chatroom-form__field
    = f.label :name, class: 'sidebar-chatroom-form__label'
    = f.text_field :name, class: 'sidebar-chatroom-form__input'
  .sidebar-chatroom-form__actions
    = f.submit 'Guardar', class: 'sidebar-chatroom-form__button'
